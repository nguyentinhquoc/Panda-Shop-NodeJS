<%- include('header') -%>

<main class="main-wrapper">
    <div class="main-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Components</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Starter Page</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Settings</button>
                    <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
                        data-bs-toggle="dropdown"> <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"> <a class="dropdown-item"
                            href="javascript:;">Action</a>
                        <a class="dropdown-item" href="javascript:;">Another action</a>
                        <a class="dropdown-item" href="javascript:;">Something else here</a>
                        <div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated
                            link</a>
                    </div>
                </div>
            </div>
        </div>
        <!--end breadcrumb-->
        <div class="row">
            <div class="col-12 col-lg-11">
                <div class="card">
                    <div class="card-header px-4 py-3">
                        <h5 class="mb-0">Sửa sản phẩm</h5>
                    </div>
                    <div class="card-body p-4">
                        <form class="row g-3 needs-validation" novalidate
                            action="/admin/edit-product/<%= valueProduct.id %>" method="POST" id="formAdd"
                            enctype="multipart/form-data">
                            <input type="hidden" name="productId" value="<%= valueProduct.id %>">
                            <div class="card-body">
                                <div class="mb-4">
                                    <label for="NameProduct" class="form-label">
                                        <h5 class="mb-3">Tên sản phẩm</h5>
                                    </label>
                                    <input id="NameProduct" name="NameProduct" type="text" class="form-control"
                                        value="<%= valueProduct.name_product %>"
                                        placeholder="Write name product here...." required>
                                </div>

                                <div class="col-12 mb-3 d-flex justify-content-between">
                                    <div class="col-5">
                                        <label for="AddCategory" class="form-label">
                                            <h5 class="mb-3">Danh mục
                                            </h5>
                                        </label>
                                        <select class="form-select" id="AddCategory" name="CategoryProduct">
                                            <% categories.forEach(function(items) { %>
                                            <option value="<%= items.id %>"
                                                <%= items.id ==  valueProduct.id_category  ? 'selected=true' : '' %>>
                                                <%= items.name_category.toUpperCase()  %>
                                            </option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    <div class="col-2">
                                        <label for="PriceProduct" class="form-label">
                                            <h5 class="mb-3">Giá </h5>
                                        </label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="basic-addon1">$</span>
                                            <input value="<%= valueProduct.price_product %>" id="PriceProduct"
                                                type="number" class="form-control" min="0" name="PriceProduct" required>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <label for="PriceSaleProduct" class="form-label">
                                            <h5 class="mb-3">Giảm giá</h5>
                                        </label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="basic-addon1">%</span>
                                            <input value="<%= valueProduct.price_sale %>" type="number"
                                                id="PriceSaleProduct" class="form-control" min="0"
                                                name="PriceSaleProduct" required>
                                        </div>
                                    </div>

                                </div>
                                <div class="mb-4">
                                    <h5 class="mb-3">Mô tả</h5>
                                    <textarea required id="DescriptionProduct" class="form-control"
                                        name="DescriptionProduct" cols="4" rows="6"
                                        placeholder="Mô tả tại đây...."><%= valueProduct.description_product %></textarea>
                                </div>
                                <div class="mb-4">
                                    <label for="ImageProduct" class="form-label">
                                        <h5>Ảnh sản phẩm </h5>
                                    </label>
                                    <input class="form-control form-control-lg" id="ImageProduct" type="file"
                                        name="ImageProduct">
                                </div>
                                <div class="d-flex" style="justify-content: space-evenly;">
                                    <div class="col-6">
                                        <h4 class="text-center">Ảnh cũ</h4>
                                        <div style="text-align: center;">

                                            <img height="400px"
                                                src="/assets/img/product/<%= valueProduct.image_product  %>" alt="">
                                        </div>

                                    </div>
                                    <div class="col-6 ml-5" style="text-align: center;">
                                        <h4>Ảnh mới</h4>
                                        <div id="preview-image">
                                        </div>
                                    </div>
                                </div>
                                <input type="hidden" name="ImageOld" value="<%= valueProduct.image_product %>">
                                <div>
                                    <h5 style="margin: 20px 10px;">Biến thể </h5>
                                    <div>
                                        <div class="mb-4">
                                            <% variants.forEach(function(item) { %>
                                            <div class="variant-form bg-light p-3 rounded mb-3">
                                                <div class="row g-3">
                                                    <div class="col-md-3">
                                                        <label for="color" class="form-label">Color</label>
                                                        <select class="form-select" name="color[]" id="color" disabled>
                                                            <% listColors.forEach(function(itemCl) { %>
                                                            <option <%= itemCl.id == item.id_color ? 'selected' : '' %>
                                                                value="<%= itemCl.id %>">
                                                                <%= itemCl.name_color.toUpperCase() %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label for="size" class="form-label">Size</label>
                                                        <select class="form-select" name="size[]" id="size" disabled>
                                                            <% listSizes.forEach(function(itemSz) { %>
                                                            <option <%= itemSz.id == item.id_size ? 'selected' : '' %>
                                                                value="<%= itemSz.id %>">
                                                                <%= itemSz.name_size.toUpperCase() %></option>
                                                            <% }); %>
                                                        </select>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label for="quantity" class="form-label">Số lượng</label>
                                                        <input type="hidden" name="idVariant" value="<%= item.id %>">
                                                        <input type="number" class="form-control" name="quantity"
                                                            id="quantity" min="0" value="<%=item.quantity_variant %>">
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label for="image" class="form-label">Ảnh</label>
                                                        <input type="file" class="form-control" name="<%= item.id %>"
                                                            id="image">
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                        </div>

                                        <div class="hientThiForm"></div>
                                        <div>

                                            <button id="addVariant" class="btnADDVariant btn btn-info">Add
                                                Variant</button>
                                        </div>

                                        <style>
                                            .btnADDVariant {
                                                margin-left: 800px;
                                                margin-bottom: 50px;
                                                font-size: 20px;
                                                width: auto;
                                            }
                                        </style>

                                        <script>
                                            var hientThiForm = document.querySelector('.hientThiForm')
                                            let selectedOptions = new Set();
                                            var hienThiCheck = 1;
                                            document.getElementById('addVariant').addEventListener('click',
                                                function (
                                                    e) {
                                                    e.preventDefault();
                                                    hienThiCheck += 1
                                                    if (hienThiCheck == 2) {
                                                        hienThiCheck += 1
                                                        hientThiForm.innerHTML =
                                                            `
                                                    <div id="variantForms" class="mb-4">
                                                        <div class="variant-form bg-light p-3 rounded mb-3">
                                                            <div class="row g-3">
                                                                <div class="col-md-3">
                                                                    <label for="color" class="form-label">Color</label>
                                                                    <select class="form-select" name="color[]" id="color"
                                                                        required>
                                                                        <option value="">Select Color</option>
                                                                        <% listColors.forEach(function(item) { %>
                                                                        <option value="<%= item.id %>">
                                                                            <%= item.name_color.toUpperCase() %></option>
                                                                        <% }); %>
                                                                    </select>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <label for="size" class="form-label">Size</label>
                                                                    <select class="form-select" name="size[]" id="size"
                                                                        required>
                                                                        <option value="">Select Size</option>
                                                                        <% listSizes.forEach(function(item) { %>
                                                                        <option value="<%= item.id %>">
                                                                            <%= item.name_size.toUpperCase() %></option>
                                                                        <% }); %>
                                                                    </select>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <label for="quantity"
                                                                        class="form-label">Số lượng</label>
                                                                    <input type="number" class="form-control"
                                                                        name="quantity[]" id="quantity" min="0" required>
                                                                </div>
                                                                <div class="col-md-3">
                                                                    <label for="image" class="form-label">Ảnh</label>
                                                                    <input type="file" class="form-control" name="image[]"
                                                                        id="image">
                                                                            <img id="imagePreview" src="#" alt="Image preview" style="max-width: 100px; max-height: 100px; display: none; margin-top: 10px;">
    
                                                                </div>
                                                                <div class="col-md-1">
                                <button type="button" class="btn btn-danger delete-variant mt-4">Delete</button>
                            </div>
                                                            </div>
                                                        </div>
                                                </div>
                                                    `
                                                    }
                                                    if (hienThiCheck > 3) {
                                                        var variantForms = document.getElementById('variantForms');
                                                        var newForm = variantForms.firstElementChild.cloneNode(
                                                            true);
                                                        newForm.querySelectorAll(
                                                                'select, input[type="number"], input[type="file"]')
                                                            .forEach(function (element) {
                                                                element.value = '';
                                                            });
                                                        variantForms.appendChild(newForm);
                                                        updateSelectEvents(newForm);
                                                        checkDuplicates();
                                                    }
                                                }
                                            );

                                            document.addEventListener('click', function (e) {
                                                checkDuplicates();
                                                if (e.target && e.target.classList.contains(
                                                        'delete-variant')) {
                                                    e.preventDefault();
                                                    let variantForm = e.target.closest('.variant-form');
                                                    if (variantForm && document.querySelectorAll(
                                                            '.variant-form').length > 1) {
                                                        variantForm.remove();
                                                        checkDuplicates();
                                                    }
                                                }
                                            });

                                            function updateSelectEvents(form) {
                                                form.querySelectorAll('select').forEach(function (select) {
                                                    select.addEventListener('change', function () {
                                                        selectedOptions.add(this.name + '-' +
                                                            this
                                                            .value);
                                                        checkDuplicates();
                                                    });
                                                });
                                            }

                                            function checkDuplicates() {
                                                let forms = document.querySelectorAll('.variant-form');
                                                forms.forEach(form => form.style.border = '');
                                                let hasDuplicates = false;
                                                for (let i = 0; i < forms.length; i++) {
                                                    for (let j = i + 1; j < forms.length; j++) {
                                                        let color1 = forms[i].querySelector(
                                                                'select[name="color[]"]')
                                                            .value;
                                                        let size1 = forms[i].querySelector(
                                                                'select[name="size[]"]')
                                                            .value;
                                                        let color2 = forms[j].querySelector(
                                                                'select[name="color[]"]')
                                                            .value;
                                                        let size2 = forms[j].querySelector(
                                                                'select[name="size[]"]')
                                                            .value;
                                                        if (color1 === color2 && size1 === size2 && color1 &&
                                                            size1) {
                                                            forms[i].style.border = '2px solid red';
                                                            forms[j].style.border = '2px solid red';
                                                            hasDuplicates = true;
                                                        }
                                                    }
                                                }
                                                document.querySelector('.BTNSUBMIT').disabled = hasDuplicates;
                                            }
                                        </script>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-grd-primary px-4 BTNSUBMIT"
                                onclick="return confirm('Bạn có chắc muốn sửa với các trường dữ liệu vừa thay đổi ?')">Sửa
                                sản phẩm</button>
                        </form>
                    </div>
                    <!-- Bootstrap JS và jQuery -->
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js">
                    </script>
                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                    <!-- ---------------------------- VALIDATE FORM ---------------------------- -->
                    <script>
                        function deleteImg() {
                            let inputFile = document.getElementById('ImageProduct');
                            let newInputFile = document.createElement('input');
                            newInputFile.className = 'form-control form-control-lg';
                            newInputFile.type = 'file';
                            newInputFile.id = 'ImageProduct';
                            newInputFile.name = 'ImageProduct';
                            inputFile.parentNode.replaceChild(newInputFile, inputFile);
                            document.getElementById('preview-image').innerHTML = ''
                        }
                        var domNameProduct = document.querySelector('#NameProduct');
                        domNameProduct.addEventListener('blur', function () {
                            var check = false;
                            if (domNameProduct.value.trim() === "") {
                                domNameProduct.style.border = '2px solid red';
                            } else {
                                check = true;
                                domNameProduct.style.border = '';
                            }
                        });
                        var domPriceProduct = document.querySelector('#PriceProduct')
                        domPriceProduct.addEventListener('blur', function () {
                            if (domPriceProduct.value.trim() === "" || domPriceProduct.value <= 0) {
                                domPriceProduct.style.border = '2px solid red';
                            } else {
                                check = true;
                                domPriceProduct.style.border = '';
                            }
                        });
                        var
                            domPriceSaleProduct = document.querySelector('#PriceSaleProduct')
                        domPriceSaleProduct.addEventListener('blur', function () {
                            if (domPriceSaleProduct.value.trim() === "" || domPriceSaleProduct.value <= 0) {
                                domPriceSaleProduct.style.border = '2px solid red';
                            } else {
                                check = true;
                                domPriceSaleProduct.style.border = '';
                            }
                        });
                        var
                            domDescriptionProduct = document.querySelector('#DescriptionProduct')
                        domDescriptionProduct.addEventListener('blur', function () {
                            if (domDescriptionProduct.value.trim() === "") {
                                domDescriptionProduct.style.border = '2px solid red';
                            } else {
                                check = true;
                                domDescriptionProduct.style.border = '';
                            }
                        });


                        var domImageProduct = document.querySelector('#ImageProduct')
                        var formAdd = document.querySelector('#formAdd')




                        function
                        submitF() {
                            if (domNameProduct.value.trim() === "") {
                                check = false;
                                domNameProduct.style.border = '2px solid red';
                            }
                            if (domPriceProduct.value.trim() === "" ||
                                domPriceProduct.value <= 0) {
                                check = false;
                                domPriceProduct.style.border = '2px solid red';
                            }
                            if (domPriceSaleProduct.value.trim() === "" || domPriceSaleProduct.value <= 0) {
                                check = false;
                                domPriceSaleProduct.style.border = '2px solid red';
                            }
                            if (domDescriptionProduct.value.trim() === "") {
                                check = false;
                                domDescriptionProduct.style.border = '2px solid red';
                            }

                            if (domNameProduct.value.trim() != "" && domPriceProduct.value > 0 &&
                                domPriceSaleProduct.value > 0 && domDescriptionProduct
                                .value
                                .trim() != "") {
                                formAdd.submit()
                            }
                        }



                        document.getElementById('ImageProduct').addEventListener('change', function () {
                            var file = this.files[0];
                            if (file) {
                                var reader = new FileReader();
                                reader.onload = function (e) {
                                    document.getElementById('preview-image').innerHTML = `
    <div  onclick="deleteImg()" id="deleteImg"><span class="material-icons-outlined position-absolute me-3 translate-middle-y end-0 top-50 search-close">close</span>
</div>
    <img style="max-width:100%;"  height="400px"  id="preview-images" src="#" alt="Preview">
`;
                                    document.getElementById('preview-images').src = e.target
                                        .result;
                                };
                                reader.readAsDataURL(file);
                                document.getElementById('file-name').textContent =
                                    'File selected: ' + file.name;
                            } else {
                                domImageProduct.style.border = '2px solid red';
                            }
                        });
                    </script>

                </div>
            </div>
        </div>
        <!--end row-->
    </div>
</main>
<%- include('footer') -%>