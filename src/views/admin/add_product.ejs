<%- include('header') -%>

<main class="main-wrapper">
    <div class="main-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Components</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Starter Page</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <button type="button" class="btn btn-primary">Settings</button>
                    <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
                        data-bs-toggle="dropdown"> <span class="visually-hidden">Toggle Dropdown</span>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"> <a class="dropdown-item"
                            href="javascript:;">Action</a>
                        <a class="dropdown-item" href="javascript:;">Another action</a>
                        <a class="dropdown-item" href="javascript:;">Something else here</a>
                        <div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated
                            link</a>
                    </div>
                </div>
            </div>
        </div>
        <!--end breadcrumb-->
        <div class="row">
            <div class="col-12 col-lg-11">
                <div class="card">
                    <div class="card">
                        <div class="card-header px-4 py-3">
                            <h5 class="mb-0">Create Product</h5>
                        </div>
                        <div class="card-body p-4">
                            <form class="row g-3 needs-validation" novalidate action="add-product" method="post"
                                enctype="multipart/form-data">
                                <div class="card-body">
                                    <div class="mb-4">
                                        <label for="NameProduct" class="form-label">
                                            <h5 class="mb-3">Name Product</h5>
                                        </label>
                                        <input required id="NameProduct " name="NameProduct" type="text"
                                            class="form-control" placeholder="Write name product here....">
                                    </div>

                                    <div class="col-12 mb-3 d-flex justify-content-between">
                                        <div class="col-5">
                                            <label for="AddCategory" class="form-label">
                                                <h5 class="mb-3">Category
                                                </h5>
                                            </label>
                                            <select class="form-select" id="AddCategory" name="CategoryProduct">
                                                <option selected disabled value>Choose...</option>
                                                <% categories.forEach(function(items) { %>
                                                <option value="<%= items.id %>">
                                                    <%= items.name_category.toUpperCase()  %>
                                                </option>
                                                <% }); %>
                                            </select>
                                        </div>
                                        <div class="col-2">
                                            <label for="PriceProduct" class="form-label">
                                                <h5 class="mb-3">Price </h5>
                                            </label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="basic-addon1">$</span>
                                                <input required id="PriceProduct" type="number" class="form-control"
                                                    min="0" name="PriceProduct" laceholder="$" value="0">
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <label for="PriceSaleProduct" class="form-label">
                                                <h5 class="mb-3">Price Sale </h5>
                                            </label>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text" id="basic-addon1">%</span>
                                                <input required type="number" id="PriceSaleProduct" class="form-control"
                                                    min="0" name="PriceSaleProduct" placeholder="$" value="0" max="100">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <h5 class="mb-3">Product Description</h5>
                                        <textarea id="DescriptionProduct" class="form-control" name="DescriptionProduct"
                                            cols="4" rows="6" placeholder="Write a description here...."></textarea>
                                    </div>
                                    <div class="mb-4">
                                        <label for="ImageProduct" class="form-label">
                                            <h5>Images Product </h5>
                                        </label>
                                        <input required class="form-control form-control-lg" id="ImageProduct"
                                            type="file" name="ImageProduct">

                                    </div>
                                    <div id="preview-image"></div>
                                    <div>
                                        <h5>Variant</h5>
                                        <p onclick="duBT()" class="btn btn-danger">Đẩy đủ biến thể</p>
                                        <p onclick="thieuBT()" class="btn btn-danger">Thiếu biến thể</p>


                                        <div class="hientThiForm">

                                        </div>

                                        <button id="addVariant" class="btn btn-primary">Add Variant</button>
                                        <script>
                                            var hientThiForm = document.querySelector('.hientThiForm')

                                            function duBT() {
                                                hientThiForm.innerHTML =
                                                    `
                                                   <table class="table table-striped">
                                            <tr>
                                                <th style="color: aqua;">SIZE / MÀU</th>
                                                <% listColors.forEach(function(items) { %>
                                                <th> <%= items.name_color.toUpperCase() %>
                                                </th>
                                                <% }); %>
                                            </tr>
                                            <% listSizes.forEach(function(items1) { %>
                                            <tr>
                                                <th><%= items1.name_size %></th>
                                                <% listColors.forEach(function(items2) { %>
                                                <th>
                                                    <div>
                                                        <input required type="number" class="form-control" min="0"
                                                            name="<%=items2.id%>_<%=items1.id%>" placeholder="Quantity"
                                                            value="0">
                                                        <input type="file" class="form-control form-control-sm my-2"
                                                            name="img_<%=items2.id%>_<%=items1.id%>">
                                                    </div>
                                                </th>
                                                <% }); %>
                                            </tr>
                                            <% }); %>
                                        </table>
                                                `
                                            }

                                            function thieuBT() {
                                                hientThiForm.innerHTML =
                                                    `
                                                <div id="variantForms">
                                                <div id="variantForms" class="mb-4">
                                                    <div class="variant-form bg-light p-3 rounded mb-3">
                                                        <div class="row g-3">
                                                            <div class="col-md-3">
                                                                <label for="color" class="form-label">Color</label>
                                                                <select class="form-select" name="color[]" id="color"
                                                                    required>
                                                                    <option value="">Select Color</option>
                                                                    <% listColors.forEach(function(item) { %>
                                                                    <option value="<%= item.id %>">
                                                                        <%= item.name_color.toUpperCase() %></option>
                                                                    <% }); %>
                                                                </select>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label for="size" class="form-label">Size</label>
                                                                <select class="form-select" name="size[]" id="size"
                                                                    required>
                                                                    <option value="">Select Size</option>
                                                                    <% listSizes.forEach(function(item) { %>
                                                                    <option value="<%= item.id %>">
                                                                        <%= item.name_size.toUpperCase() %></option>
                                                                    <% }); %>
                                                                </select>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label for="quantity"
                                                                    class="form-label">Quantity</label>
                                                                <input type="number" class="form-control"
                                                                    name="quantity[]" id="quantity" min="0" required>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <label for="image" class="form-label">Image</label>
                                                                <input type="file" class="form-control" name="image[]"
                                                                    id="image">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                                `
                                            }

                                            let selectedOptions = new Set();

                                            document.getElementById('addVariant').addEventListener('click', function (
                                                e) {
                                                e.preventDefault();
                                                var variantForms = document.getElementById('variantForms');
                                                var newForm = variantForms.firstElementChild.cloneNode(true);

                                                // Reset form mới
                                                newForm.querySelectorAll(
                                                        'select, input[type="number"], input[type="file"]')
                                                    .forEach(function (element) {
                                                        element.value = '';
                                                    });

                                                variantForms.appendChild(newForm);
                                                updateSelectEvents(newForm);
                                                checkDuplicates();
                                            });

                                            function updateSelectEvents(form) {
                                                form.querySelectorAll('select').forEach(function (select) {
                                                    select.addEventListener('change', function () {
                                                        selectedOptions.add(this.name + '-' + this
                                                            .value);

                                                        checkDuplicates();
                                                    });
                                                });
                                            }

                                            function checkDuplicates() {
                                                let forms = document.querySelectorAll('.variant-form');
                                                forms.forEach(form => form.style.border = '');
                                                for (let i = 0; i < forms.length; i++) {
                                                    for (let j = i + 1; j < forms.length; j++) {
                                                        let color1 = forms[i].querySelector('select[name="color[]"]')
                                                            .value;
                                                        let size1 = forms[i].querySelector('select[name="size[]"]')
                                                            .value;
                                                        let color2 = forms[j].querySelector('select[name="color[]"]')
                                                            .value;
                                                        let size2 = forms[j].querySelector('select[name="size[]"]')
                                                            .value;
                                                        if (color1 === color2 && size1 === size2 && color1 && size1) {
                                                            forms[i].style.border = '2px solid red';
                                                            forms[j].style.border = '2px solid red';
                                                            document.querySelector('.BTNSUBMIT').disabled = true;
                                                        } else {
                                                            document.querySelector('.BTNSUBMIT').disabled = false;
                                                        }
                                                    }
                                                }
                                            }

                                            updateSelectEvents(document.querySelector('.variant-form'));
                                        </script>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="d-md-flex d-grid align-items-center gap-3">
                                            <button type="reset" class="col-6 btn btn-grd-info px-4">Reset</button>
                                            <button type="submit"
                                                class="BTNSUBMIT col-6 btn btn-grd-primary px-4">Submit</button>
                                        </div>
                                    </div>
                            </form>
                        </div>
                    </div>

                    <!-- <p onclick="submitF()" class="btn btn-outline-primary">Thêm sản phẩm</p> -->
                    <!-- Bootstrap JS và jQuery -->
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js">
                    </script>
                    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
                    <!-- ---------------------------- VALIDATE FORM ---------------------------- -->
                    <script>
                        function deleteImg() {
                            let inputFile = document.getElementById('ImageProduct');
                            let newInputFile = document.createElement('input');
                            newInputFile.className = 'form-control form-control-lg';
                            newInputFile.type = 'file';
                            newInputFile.id = 'ImageProduct';
                            newInputFile.name = 'ImageProduct';
                            inputFile.parentNode.replaceChild(newInputFile, inputFile);
                            document.getElementById('preview-image').innerHTML = ''
                        }
                        document.getElementById('ImageProduct').addEventListener('change', function () {
                            var file = this.files[0];
                            if (file) {
                                var reader = new FileReader();
                                reader.onload = function (e) {
                                    document.getElementById('preview-image').innerHTML = `
    <div  onclick="deleteImg()" id="deleteImg"><span class="material-icons-outlined position-absolute me-3 translate-middle-y end-0 top-50 search-close">close</span>
</div>
    <img width="500px" id="preview-images" src="#" alt="Preview">
`;
                                    document.getElementById('preview-images').src = e.target
                                        .result;
                                };
                                reader.readAsDataURL(file);
                                document.getElementById('file-name').textContent =
                                    'File selected: ' + file.name;
                            } else {
                                domImageProduct.style.border = '2px solid red';
                            }
                        });
                    </script>

                </div>
            </div>
        </div>
        <!--end row-->
    </div>
</main>
<%- include('footer') -%>