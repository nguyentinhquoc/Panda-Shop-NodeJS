<%- include('header') -%>

<style>
    .review-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        line-height: 1.6;
        color: #333;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #2c3e50;
        text-align: center;
        margin-bottom: 30px;
    }

    .product-info {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
        background-color: #f1f3f5;
        padding: 15px;
        border-radius: 8px;
    }

    .product-image {
        width: 120px;
        height: 120px;
        object-fit: cover;
        margin-right: 20px;
        border-radius: 8px;
    }

    .product-details h2 {
        margin: 0 0 10px 0;
        color: #3498db;
    }

    .product-details p {
        margin: 5px 0;
        color: #666;
    }

    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-start;
        margin-bottom: 20px;
    }

    .rating>input {
        display: none;
    }

    .rating>label {
        position: relative;
        width: 1.1em;
        font-size: 40px;
        color: #5c1717;
        cursor: pointer;
    }

    .rating>label:before {
        content: "\2605";
        position: absolute;
        color: #ccc;
    }

    .rating>label:hover:before,
    .rating>label:hover~label:before,
    .rating>input:checked~label:before {
        color: #FFD700;

    }

    textarea {
        width: 100%;
        height: 150px;
        margin: 10px 0;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
        resize: vertical;
    }

    .submit-review {
        background: #2ecc71;
        color: white;
        border: none;
        padding: 12px 25px;
        border-radius: 8px;
        cursor: pointer;
        font-size: 18px;
        transition: background 0.3s ease;
    }

    .submit-review:hover {
        background: #27ae60;
    }
</style>
<%
function formatDate(date) {
    const d = new Date(date);
    return `${d.getDate()}/${d.getMonth() + 1}/${d.getFullYear()} `;
}
%>
<form method="post">
    <input type="hidden" name="id_user" value="<%= user.id %>">

    <div class="review-container">
        <h1>Đánh giá sản phẩm</h1>
        <p><strong>Mã đơn hàng:</strong> <%= checkStatus.code_oders %></p>
        <p><strong>Ngày mua: </strong><%= formatDate(detail.createdAt) %> </p>
        <% orderWCode.forEach(function(items) { %>
        <div class="product-info">
            <img src="/assets/img/product/<%=items.Variant.Product.image_product%>" alt="Sản phẩm"
                class="product-image">
            <div class="product-detai1ls">
                <h2><%= items.Variant.Product.name_product %></h2>
                <div class="d-flex">
                    <h4>Phân loại:</h4>
                    <h6 style="opacity:0.5; margin-left: 10px;">Màu: <%= items.Variant.Color.name_color %>,
                        Size: <%= items.Variant.Size.name_size %>
                    </h6>
                </div>
            </div>
        </div>
        <div class="rating">
            <input checked type="radio" id="star5<%= items.id_variants %>" name="star[<%= items.id_variants %>]"
                value="5" /><label for="star5<%= items.id_variants %>"></label>
            <input type="radio" id="star4<%= items.id_variants %>" name="star[<%= items.id_variants %>]"
                value="4" /><label for="star4<%= items.id_variants %>"></label>
            <input type="radio" id="star3<%= items.id_variants %>" name="star[<%= items.id_variants %>]"
                value="3" /><label for="star3<%= items.id_variants %>"></label>
            <input type="radio" id="star2<%= items.id_variants %>" name="star[<%= items.id_variants %>]"
                value="2" /><label for="star2<%= items.id_variants %>"></label>
            <input type="radio" id="star1<%= items.id_variants %>" name="star[<%= items.id_variants %>]"
                value="1" /><label for="star1<%= items.id_variants %>"></label>
        </div>
        <br>
        <div>
            <textarea name="content_review[<%= items.id_variants %>]"
                placeholder="Chia sẻ trải nghiệm của bạn về sản phẩm này..."></textarea>
        </div>
        <% }) %>
        <button type="submit" class="submit-review">Gửi đánh giá</button>
</form>
</div>

<script>
    const ratingInputs = document.querySelectorAll('.rating > input');
    ratingInputs.forEach(input => {
        input.addEventListener('change', function () {
            const rating = this.value;
            const labels = document.querySelectorAll('.rating > label');
            labels.forEach((label, index) => {
                if (index < rating) {
                    label.style.color = '#FFD700';
                } else {
                    label.style.color = '#ddd';
                }
            });
        });
    });
</script>
<script src="/assets/js/jquery.min.js"></script>

<%- include('footer') -%>